<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Experience - Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <link
        href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap"
        rel="stylesheet">
    <style type="text/tailwindcss">
        body { font-family: 'Plus Jakarta Sans', sans-serif; background: #0a0a0a; color: white; }
        .sidebar-link { @apply flex items-center gap-3 px-4 py-3 rounded-xl text-gray-400 hover:text-white hover:bg-white/5 transition-all; }
        .sidebar-link.active { @apply bg-teal-500/10 text-teal-400; }
    </style>
</head>

<body class="flex min-h-screen">
    <%- include('../partials/sidebar', { path: '/admin/experience' }) %>

        <main class="flex-1 ml-64 p-8">
            <%- include('../partials/header', { title: 'Manage Experience' }) %>

                <div class="mb-6 flex justify-between items-center">
                    <h3 class="text-xl font-bold font-outfit">Work Experience</h3>
                    <a href="/admin/experience/create"
                        class="bg-teal-500 hover:bg-teal-600 text-black font-bold py-2 px-4 rounded-lg flex items-center gap-2 transition-colors">
                        <i data-lucide="plus" class="w-4 h-4"></i> Add New
                    </a>
                </div>

                <!-- Success/Error Messages -->
                <% if (success) { %>
                    <div class="mb-6 p-4 bg-green-500/10 border border-green-500/20 rounded-xl text-green-400 flex items-center gap-3">
                        <i data-lucide="check-circle" class="w-5 h-5"></i>
                        <span>
                            <% if (success === 'created') { %>Experience created successfully!<% } %>
                            <% if (success === 'updated') { %>Experience updated successfully!<% } %>
                            <% if (success === 'deleted') { %>Experience deleted successfully!<% } %>
                            <% if (success === 'reordered') { %>Experience reordered successfully!<% } %>
                        </span>
                    </div>
                <% } %>
                
                <% if (error) { %>
                    <div class="mb-6 p-4 bg-red-500/10 border border-red-500/20 rounded-xl text-red-400 flex items-center gap-3">
                        <i data-lucide="alert-circle" class="w-5 h-5"></i>
                        <span>
                            <% if (error === 'not_found') { %>Experience not found!<% } %>
                            <% if (error === 'already_first') { %>Already at the top!<% } %>
                            <% if (error === 'already_last') { %>Already at the bottom!<% } %>
                        </span>
                    </div>
                <% } %>

                <div class="bg-white/5 border border-white/10 rounded-2xl overflow-hidden">
                    <table class="w-full text-left">
                        <thead class="bg-white/5 text-gray-400">
                            <tr>
                                <th class="p-4 font-medium">Order</th>
                                <th class="p-4 font-medium">Company</th>
                                <th class="p-4 font-medium">Position</th>
                                <th class="p-4 font-medium">Period</th>
                                <th class="p-4 font-medium text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-white/5">
                            <% experiences.forEach(exp=> { %>
                                <tr class="hover:bg-white/5 transition-colors">
                                    <td class="p-4">
                                        <div class="flex items-center gap-2">
                                            <span class="inline-block min-w-6 text-center"><%= exp.order %></span>
                                            <form action="/admin/experience/move-up/<%= exp.id %>" method="POST" class="inline">
                                                <button title="Move up" class="p-1 bg-white/5 hover:bg-white/10 rounded">
                                                    <i data-lucide="chevron-up" class="w-4 h-4"></i>
                                                </button>
                                            </form>
                                            <form action="/admin/experience/move-down/<%= exp.id %>" method="POST" class="inline">
                                                <button title="Move down" class="p-1 bg-white/5 hover:bg-white/10 rounded">
                                                    <i data-lucide="chevron-down" class="w-4 h-4"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                    <td class="p-4 font-medium">
                                        <%= exp.company %>
                                    </td>
                                    <td class="p-4 text-gray-300">
                                        <%= exp.position %>
                                    </td>
                                    <td class="p-4 text-sm text-gray-400">
                                        <%= exp.period %>
                                    </td>
                                    <td class="p-4 text-right">
                                        <div class="flex items-center justify-end gap-2">
                                            <a href="/admin/experience/edit/<%= exp.id %>"
                                                class="p-2 bg-blue-500/10 text-blue-400 rounded-lg hover:bg-blue-500/20 transition-colors">
                                                <i data-lucide="edit-2" class="w-4 h-4"></i>
                                            </a>
                                            <form action="/admin/experience/delete/<%= exp.id %>" method="POST"
                                                onsubmit="return confirm('Are you sure?')" class="inline">
                                                <button type="submit"
                                                    class="p-2 bg-red-500/10 text-red-500 rounded-lg hover:bg-red-500/20 transition-colors">
                                                    <i data-lucide="trash-2" class="w-4 h-4"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                                    <% if (experiences.length===0) { %>
                                        <tr>
                                            <td colspan="5" class="p-8 text-center text-gray-500">No experience records
                                                found.</td>
                                        </tr>
                                        <% } %>
                        </tbody>
                    </table>
                </div>
        </main>
        
        <script>
            lucide.createIcons();

            // Auto-dismiss success/error messages after 5 seconds
            const successMessage = document.querySelector('.bg-green-500\\/10');
            const errorMessage = document.querySelector('.bg-red-500\\/10');
            
            [successMessage, errorMessage].forEach(msg => {
                if (msg) {
                    setTimeout(() => {
                        msg.style.transition = 'opacity 0.5s';
                        msg.style.opacity = '0';
                        setTimeout(() => msg.remove(), 500);
                    }, 5000);
                }
            });
        </script>
</body>

</html>
