<%- include('partials/header') %>

    <section class="pt-32 pb-24 min-h-screen">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
            <nav aria-label="Breadcrumb" class="mb-4 text-sm text-gray-400">
                <a href="/" class="hover:text-white">Beranda</a>
                <span class="mx-2">/</span>
                <span class="text-white">Blog</span>
            </nav>
            <div class="mb-12" data-aos="fade-up">
                <span class="text-gray-400 text-lg">Artikel</span>
                <h1 class="font-outfit font-bold text-4xl sm:text-5xl">
                    <span class="text-accent">Terbaru</span>
                </h1>
                <p class="text-gray-400 mt-4 max-w-2xl">Tulisan seputar teknologi, pemrograman, dan pengalaman pribadi.
                </p>
            </div>

            <!-- Search Bar -->
            <div class="mb-12">
                <form action="/blog" method="GET" class="relative max-w-lg">
                    <input type="text" name="search" value="<%= typeof search !== 'undefined' ? search : '' %>"
                        placeholder="Cari artikel..."
                        class="w-full bg-white/5 border border-white/10 rounded-xl px-5 py-3 pl-12 text-white focus:outline-none focus:border-accent transition-colors">
                    <i data-lucide="search" class="w-5 h-5 text-gray-400 absolute left-4 top-1/2 -translate-y-1/2"></i>
                </form>
            </div>

            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                <% if (articles.length> 0) { %>
                    <% articles.forEach((article, index)=> { %>
                        <article
                            class="bg-white/5 border border-white/10 rounded-2xl overflow-hidden hover:border-accent/30 transition-all group"
                            data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
                            <a href="/blog/<%= article.slug %>" class="block h-full flex flex-col">
                                <div class="relative h-48 overflow-hidden">
                                    <% if (article.imageUrl) { %>
                                        <% const _img=article.imageUrl.startsWith('http') ?
                                            ('https://images.weserv.nl/?url=' + encodeURIComponent(article.imageUrl)) : article.imageUrl; %>
                                        <img src="<%= _img %>" alt="<%= article.title %>"
                                            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" loading="lazy" decoding="async">
                                        <% } else { %>
                                            <div class="w-full h-full bg-white/5 flex items-center justify-center">
                                                <i data-lucide="image" class="w-12 h-12 text-gray-600"></i>
                                            </div>
                                            <% } %>
                                </div>
                                <div class="p-6 flex-1 flex flex-col">
                                    <div class="flex flex-wrap gap-2 mb-3">
                                        <% if (article.tags) { %>
                                            <% article.tags.split(' ,').forEach(tag=> { %>
                                            <span
                                                class="text-xs font-medium text-accent bg-accent/10 px-2 py-1 rounded">
                                                <%= tag.trim() %>
                                            </span>
                                            <% }) %>
                                                <% } %>
                                </div>
                                <h2
                                    class="text-xl font-outfit font-bold mb-3 group-hover:text-accent transition-colors line-clamp-2">
                                    <%= article.title %>
                                </h2>
                                <div
                                    class="mt-auto flex items-center justify-between text-sm text-gray-500 pt-4 border-t border-white/5">
                                    <span>
                                        <%= new Date(article.createdAt).toLocaleDateString('id-ID', { year: 'numeric' ,
                                            month: 'long' , day: 'numeric' }) %>
                                    </span>
                                    <span class="group-hover:translate-x-1 transition-transform">
                                        <i data-lucide="arrow-right" class="w-4 h-4 text-accent"></i>
                                    </span>
                                </div>
            </div>
            </a>
            </article>
            <% }) %>
                <% } else { %>
                    <div class="col-span-full text-center py-12">
                        <div class="bg-white/5 rounded-2xl p-8 max-w-md mx-auto">
                            <i data-lucide="file-x" class="w-12 h-12 text-gray-500 mx-auto mb-4"></i>
                            <h3 class="text-xl font-bold mb-2">Tidak ada artikel ditemukan</h3>
                            <p class="text-gray-400">Coba kata kunci lain atau kembali lagi nanti.</p>
                            <% if (typeof search !=='undefined' && search) { %>
                                <a href="/blog" class="inline-block mt-4 text-accent hover:underline">Reset
                                    pencarian</a>
                                <% } %>
                        </div>
                    </div>
                    <% } %>
        </div>
        </div>
    </section>

    <%- include('partials/footer') %>