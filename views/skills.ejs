<%- include('partials/header', { title: 'Keterampilan' }) %>

<section class="pt-28 pb-16 max-w-6xl mx-auto px-6">
  <h1 class="text-3xl sm:text-4xl font-outfit font-extrabold mb-6">Keterampilan</h1>
  <p class="text-gray-400 mb-10">Terbagi menjadi hardskill, softskill, dan bahasa.</p>

  <% const sections = ['hardskill','softskill','bahasa']; %>
  <% sections.forEach(sec => { const list = (skillCategories && skillCategories[sec]) || []; %>
    <div class="mb-10">
      <h2 class="text-2xl font-bold font-outfit mb-4 capitalize"><%= sec %></h2>
      <div class="grid sm:grid-cols-2 gap-4">
        <% list.forEach(s => { %>
          <div class="bg-white/5 border border-white/10 rounded-xl p-4">
            <div class="flex items-center justify-between mb-2">
              <div class="flex items-center gap-2">
                <% if (s.icon && !s.icon.startsWith('/')) { %>
                  <i data-lucide="<%= s.icon %>" class="w-5 h-5 text-accent"></i>
                <% } %>
                <span class="font-medium"><%= s.name %></span>
              </div>
              <span class="text-sm text-accent"><%= s.percentage %>%</span>
            </div>
            <div class="h-2 bg-white/10 rounded-full overflow-hidden">
              <div class="h-full bg-accent rounded-full" style="width: <%= s.percentage %>%"></div>
            </div>
          </div>
        <% }) %>
        <% if (list.length === 0) { %>
          <p class="text-gray-500">Belum ada data untuk kategori ini.</p>
        <% } %>
      </div>
    </div>
  <% }) %>
</section>

<%- include('partials/footer') %>
