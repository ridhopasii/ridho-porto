<%- include('partials/header', { title: 'Publikasi' }) %>

<section class="pt-28 pb-16 max-w-6xl mx-auto px-6">
  <h1 class="text-3xl sm:text-4xl font-outfit font-extrabold mb-6">Publikasi</h1>
  <p class="text-gray-400 mb-10">Tulisan, liputan, atau karya yang dipublikasikan.</p>
  <div class="grid md:grid-cols-2 gap-6">
    <% (publications || []).forEach(pub => { %>
      <article class="bg-white/5 border border-white/10 rounded-2xl overflow-hidden hover:border-accent/30 transition-colors">
        <% if (pub.imageUrl) { %>
          <img src="<%= pub.imageUrl %>" alt="<%= pub.title %>" class="w-full h-44 object-cover" loading="lazy" decoding="async" />
        <% } %>
        <div class="p-6">
          <div class="flex items-center justify-between mb-2">
            <span class="text-xs text-accent bg-accent/10 px-2 py-0.5 rounded"><%= pub.outlet %></span>
            <span class="text-xs text-gray-400"><%= pub.date %></span>
          </div>
          <h3 class="text-lg font-semibold text-white mb-2"><%= pub.title %></h3>
          <% if (pub.description) { %>
            <p class="text-gray-400 text-sm mb-3"><%= pub.description %></p>
          <% } %>
          <% if (pub.url) { %>
            <a href="<%= pub.url %>" target="_blank" class="inline-flex items-center gap-2 text-accent">
              Baca selengkapnya <i data-lucide="arrow-up-right" class="w-4 h-4"></i>
            </a>
          <% } %>
        </div>
      </article>
    <% }) %>
    <% if (!publications || publications.length === 0) { %>
      <p class="text-gray-500">Belum ada publikasi.</p>
    <% } %>
  </div>
</section>

<%- include('partials/footer') %>
